<div class="video-section" style="height: 80%; width:100%">
  <video
    muted
    autoplay
    playsinline
    loop>
    <source src="{{ section.settings.video | video_tag }}" type="video/mp4">
  </video>
</div>

{% schema %}
  {
    "name": "Video",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Video section heading",
        "default": "Title"
      }, {
        "type": "video",
        "id": "video",
        "label": "A Shopify-hosted video"
      }
    ],
    "presets": [
      {
        "name": "Hosted Video"
      }
    ]
  }
{% endschema %}