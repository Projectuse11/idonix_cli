{% for block in section.blocks %}
  {% case block.type %}
    {% when 'video-stored' %}
    <div class="stored-video" {{ block.shopify_attributes }}>
      {{ block.settings.video | media_tag }}
    </div>
  {% endcase %}
{% endfor %}

{% schema %}
  {
    "name": "Video",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Video section heading",
        "default": "Title"
      }
    ],
    "blocks": [
      {
        "name": "Shopify Hosted Video",
        "type": "video-shopify-hosted",
        "settings": [
          {
            "type": "video",
            "id": "video",
            "label": "A Shopify-hosted video"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Videos"
      }
    ]
  }
{% endschema %}