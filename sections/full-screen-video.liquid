{% for block in section.blocks %}
  {% case block.type %}
    {% when 'video-stored' %}
    <div class="stored-video" {{ block.shopify_attributes }}>
      {{ block.settings.video | media_tag }}
    </div>
  {% endcase %}
{% endfor %}

{% schema %}
  {
    "name": "Video",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Video section heading",
        "default": "Title"
      }
    ],
    "blocks": [
      {
        "name": "Shopify Hosted Video",
        "type": "video-shopify-hosted",
        "settings": [
          {
            "type": "video",
            "id": "video",
            "label": "A Shopify-hosted video"
          }
        ]
      }, {
        "name": "External Video",
        "type": "external-video",
        "settings": [
          {
            "type": "video_url",
            "id": "video_url",
            "accept": [
              "youtube", "vimeo"
            ],
            "default": "https://www.youtube.com/watch?v=_9VUPq3SxOc",
            "label": "URL",
            "info": "Video plays in the page."
          }
        ]
      }

    ],
    "presets": [
      {
        "name": "Full Screen Video"
      }
    ]
  }
{% endschema %}