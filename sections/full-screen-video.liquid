<div class="video-section">
  <style>
    video {
      width: 100%;
      height: 60%;
      display: block;
      padding: 20px;
    }
  </style>
  <video
    muted
    autoplay
    playsinline
    loop>
    <source src="{{ section.settings.video | video_tag }}">
  </video>
</div>

{% schema %}
  {
    "name": "Video",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Video section heading",
        "default": "Title"
      }, {
        "type": "video",
        "id": "video",
        "label": "A Shopify-hosted video"
      }
    ],
    "presets": [
      {
        "name": "Hosted Video"
      }
    ]
  }
{% endschema %}