{%- ########################################################################## 
# Label: Heading
# Returns: a string or an empty object(if nothing has been entered)
# Filters: https://shopify.dev/api/liquid/objects#string 
########################################################################## -%}
{{ section.settings.heading }} 

{%- ########################################################################## 
# Label: Heading Size
# Returns a string. i.e. the value of the selected option
# Filters: https://shopify.dev/api/liquid/objects#string
########################################################################## -%}
{{ section.settings.heading_size }} 

{%- ########################################################################## 
# Label: Image Ratio
# Returns a string. i.e. the value of the selected option
# Filters: https://shopify.dev/api/liquid/objects#string
########################################################################## -%}
{{ section.settings.image_ratio }} 

{%- ########################################################################## 
# Label: Number of Columns on Desktop
# Returns: a number or nil(if nothing has been entered)
# Filters: https://shopify.dev/api/liquid/filters#math-filters 
########################################################################## -%}
{{ section.settings.number_of_columns_on_desktop }} 

{% schema %}
  {
  "name": "Demo Collection",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "Heading Size",
      "options": [
        {
          "value": "small",
          "label": "Small"
        },
        {
          "value": "medium",
          "label": "Medium"
        },
        {
          "value": "large",
          "label": "Large"
        }
      ],
      "default": "small"
    },
    {
      "type": "select",
      "id": "image_ratio",
      "label": "Image Ratio",
      "options": [
        {
          "value": "adapt_to_image",
          "label": "Adapt to Image"
        },
        {
          "value": "square",
          "label": "Square"
        },
        {
          "value": "portrait",
          "label": "Portrait"
        }
      ],
      "default": "adapt_to_image"
    },
    {
      "type": "range",
      "id": "number_of_columns_on_desktop",
      "label": "Number of Columns on Desktop",
      "min": 1,
      "max": 5,
      "step": 1,
      "default": 2
    }
  ],
  "presets": [
    {
      "name": "Demo Collection"
    }
  ]
}  
{% endschema %}

